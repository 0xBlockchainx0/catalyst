{
  "bazelOpts": {
    "es5Mode": true,
    "devmodeTargetOverride": "es2017"
  },
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "diagnostics": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "strictNullChecks": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "baseUrl": ".",
    "lib": ["es2017", "dom", "esnext.asynciterable", "esnext"],
    "paths": {
      "@katalyst/content/*": ["packages/content/src/*"],
      "@katalyst/test-helpers/*": ["packages/content/test/helpers/*"],
      "decentraland-katalyst-contracts/*": ["packages/contracts/*"],
      "decentraland-katalyst-commons/*": ["packages/commons/servers/*"],
      "decentraland-katalyst-utils/*": ["packages/commons/utils/*"],
      "katalyst/comms/peer/proto/*": ["dist/bin/comms/peer/proto/*"]
    }
  },
  "exclude": ["node_modules", "bazel-*", "**/node_modules/*", "dist"]
}
